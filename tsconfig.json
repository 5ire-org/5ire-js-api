{
  "extends": "@5ire/dev/config/tsconfig.json",
  "exclude": [
    "build/**/*",
    "**/build/**/*",
    "docs/examples/promise/90_typegen/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths":
    {
      "@5ire/api": ["packages/api/src"],
      "@5ire/api/*": ["packages/api/src/*"],
      "@5ire/api-contract": ["packages/api-contract/src"],
      "@5ire/api-contract/*": ["packages/api-contract/src/*"],
      "@5ire/api-derive": ["packages/api-derive/src"],
      "@5ire/api-derive/*": ["packages/api-derive/src/*"],
      "@5ire/rpc-core": ["packages/rpc-core/src"],
      "@5ire/rpc-core/*": ["packages/rpc-core/src/*"],
      "@5ire/rpc-provider": ["packages/rpc-provider/src"],
      "@5ire/rpc-provider/*": ["packages/rpc-provider/src/*"],
      "@5ire/types": ["packages/types/src"],
      "@5ire/types/*": ["packages/types/src/*"],
      "@5ire/types-known": ["packages/types-known/src"],
      "@5ire/types-known/*": ["packages/types-known/src/*"],
      "@5ire/types-support": ["packages/types-support/src"],
      "@5ire/types-support/*": ["packages/types-support/src/*"]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ]
  }
}
